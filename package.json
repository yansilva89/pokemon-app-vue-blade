{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "test:unit": "jest --passWithNoTests"
    },
    "devDependencies": {
        "@types/webpack-env": "^1.18.0",
        "@types/jest": "^29.5.0",
        "@vue/test-utils": "^1.3.5",
        "axios": "^0.21",
        "babel-core": "^6.26.3",
        "jquery": "^3.6",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "popper.js": "^1.16.1",
        "postcss": "^8.1.14",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.32.11",
        "sass-loader": "^11.0.1",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.4",
        "vue": "^2.6.12",
        "vue-jest": "^3.0.7",
        "vue-loader": "^15.9.7",
        "vue-template-compiler": "^2.6.12"
    },
    "dependencies": {
        "vuex": "^3.6.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts",
            "json",
            "vue"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
        "testEnvironment": "jsdom",
        "transformIgnorePatterns": [
            "/node_modules/"
        ]
    }
}
